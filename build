#!/usr/bin/env python
import sys
import layout
import os

sys.exit (0)
assert len (sys.argv) == 2
root = sys.argv[1]
if not os.path.exists (root):
	os.path.mkdir (root)
	os.path.mkdir (os.path.join (root, 'tile'))
	os.path.mkdir (os.path.join (root, 'anim'))
	os.path.mkdir (os.path.join (root, 'music'))
	os.path.mkdir (os.path.join (root, 'sound'))
	os.path.mkdir (os.path.join (root, 'script'))
	open (os.path.join (root, 'info' + os.extsep + 'txt'), 'w').write ('This file should claim copyright and describe the dmod.')
	sys.exit (0)

d = layout.Dink (root)
d.write ('/tmp/dmod')
